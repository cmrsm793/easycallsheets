        <%= form_for(@casts, remote: true, html: { multipart: true }) do |f| %>
         <div class="modal-body">
           <ul class="errors"></ul>
          <div class="form-group col-sm-5"> 
            <%= f.label 'Name:' %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
                
            <div class="form-group col-sm-5"> 
            <%= f.label 'Character:' %>
            <%= f.text_field :character, class: "form-control"%>
            </div>
            
            <div class="form-group col-sm-5"> 
            <%= f.label 'Email:' %>
            <%= f.email_field :email, class: "form-control"%>
            </div>
            
            <div class="form-group col-sm-5"> 
            <%= f.label 'Phone Number:' %>
            <%= f.email_field :phone_number, class: "form-control"%>
            </div>

          </div>
          <div class="modal-footer">
          <div class="form-group col-sm-4"> 
          <%= f.submit(@casts.new_record? ? 'Save AND ADD ANOTHER' : 'Error', class: "btn btn-default") %>
          </div>
          
          <div class="form-group col-sm-4"> 
          <%= f.submit(@casts.new_record? ? 'Finished' : 'Error', class: "btn btn-default") %>
          </div>
          
      <% end %>
        </div>
      </div>
          
     
 